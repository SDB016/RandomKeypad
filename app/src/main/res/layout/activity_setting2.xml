<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#ffffff">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#9E9E9E"
            android:gravity="center"
            android:padding="8dp"
            android:text="설정"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="잠금화면 사용"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/check_use"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="4dp"
                android:checked="true"
                android:text="   Yes"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/check_dont"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="42dp"
                android:text="   No"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="PW 자리수"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/pwSize2"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:checked="true"
                android:text="   2자리"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/pwSize4"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="30dp"
                android:text="   4자리"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="패스워드 입력"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/input_pw"
                android:layout_width="200dp"
                android:layout_height="wrap_content"


                android:inputType="numberPassword"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="패스워드 확인"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/re_pw"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:inputType="numberPassword"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#9E9E9E"
            android:gravity="center"
            android:padding="8dp"
            android:text="랜덤숫자 버튼 투명도"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/pwLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_num_4"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:checked="true"
                        android:text="0%"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <CheckBox
                        android:id="@+id/check_num_2"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:text="100% Line"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_num_3"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:text="35%"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <CheckBox
                        android:id="@+id/check_num_1"
                        android:layout_width="111dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:text="100%"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/numImg"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#9E9E9E"
            android:gravity="center"
            android:padding="8dp"
            android:text="널키패드 버튼 투명도"
            android:textColor="#ffffff"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_nullpad_green"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:checked="true"
                        android:text="0%"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <CheckBox
                        android:id="@+id/check_nullpad_blue"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:text="100% Line"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_nullpad_red"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:text="35%"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <CheckBox
                        android:id="@+id/check_nullpad_gray"
                        android:layout_width="111dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:text="100%"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/testImg"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#9E9E9E"
            android:gravity="center"
            android:padding="8dp"
            android:text="배경화면 테마"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/bgLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_bg_default"
                    android:layout_width="149dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:checked="true"
                    android:text=" 기본"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <CheckBox
                    android:id="@+id/check_bg_image"
                    android:layout_width="94dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:text=" 이미지"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/testbg"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/background_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#9E9E9E"
            android:gravity="center"
            android:padding="8dp"
            android:text="랜덤키패드 동작시간"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/set_time_0"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:checked="false"
                android:text="   없음"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/set_time_1"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:checked="true"
                android:text="   2초"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/set_time_2"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="   3초"
                android:textColor="#000000"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/set_time_3"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="   4초"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#9E9E9E"
            android:gravity="center"
            android:padding="8dp"
            android:text="백업PIN 설정"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="백업 PIN 입력"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/input_pin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:text=""
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="백업 PIN 확인"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/check_pin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:text=""
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/des_backuppin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="패스워드 분실시 잠금해제를 위한 PIN입니다.\n 별도로 보관하시는 것을 추천합니다."
            android:gravity="center"
            android:textColor="@color/c_a6a6a6"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirm"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:text="설정완료"
                android:textSize="15sp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:layout_margin="20dp"
                android:text="설정취소"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="프로그램 정보(베타)"
                android:textColor="#000000"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textColor="#000000"
                android:text=" "
                android:textSize="17sp"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>